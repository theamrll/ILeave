<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <TextView
            android:id="@+id/child_type_of_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/child_date_leave"
            android:layout_alignBottom="@+id/child_date_leave"
            android:layout_alignStart="@+id/child_name"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/child_date_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/child_type_of_leave"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/child_type_of_leave"
            android:layout_marginStart="49dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/child_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/child_date_leave"
            android:layout_marginEnd="44dp"
            android:layout_marginTop="11dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="italic" />


</RelativeLayout>